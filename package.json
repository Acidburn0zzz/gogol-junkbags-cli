{
  "name": "docker-login",
  "description": "GitHub Action to login against a Docker registry",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "pre-checkin": "yarn run format && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazy-max/ghaction-docker-login.git"
  },
  "keywords": [
    "actions",
    "docker",
    "login"
  ],
  "author": "CrazyMax",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@vercel/ncc": "^0.23.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5",
    "typescript-formatter": "^7.2.2"
  }
}
